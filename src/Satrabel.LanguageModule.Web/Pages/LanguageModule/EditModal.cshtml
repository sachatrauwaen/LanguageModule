@page
@using Satrabel.LanguageModule.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Satrabel.LanguageModule.Pages.LanguageOptions.EditModalModel
@inject IStringLocalizer<LanguageModuleResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Language" asp-page="/LanguageModule/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />

            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
